<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TransferMoney">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:src="@drawable/transfer"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:textColor="@color/Dark"
        android:text="Make Transaction"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/grey"
        android:text="With Virtoney"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/senderAccNum"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:maxLines="1"
        android:padding="3dp"
        android:inputType="textShortMessage"
        android:layout_marginTop="20dp"
        android:background="@drawable/bgbox"
        android:hint=" Enter your A/C number"
        />

    <EditText
        android:id="@+id/receiverAccNum"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:maxLines="1"
        android:inputType="textShortMessage"
        android:padding="3dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bgbox"
        android:hint=" Enter the Beneficiary A/C Number"
        />

    <EditText
        android:id="@+id/amt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:maxLines="1"
        android:inputType="number"
        android:padding="3dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bgbox"
        android:hint=" Enter the Amount"
        />

    <Button
        android:id="@+id/payBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pay"
        android:layout_gravity="center"
        android:background="@drawable/bgbox"
        android:layout_marginTop="25dp"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:visibility="gone"/>

</LinearLayout>